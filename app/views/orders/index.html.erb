<h1>Purchased Items</h1>

<% orders = @orders.map do |order| %>
  <% if order.user_id == current_user.id%>
    <% order.product_id %>
  <% end %>
<% end %>
<div class="container">
  <div class="row">
    <% @products.each do |product| %>
      <% if orders.include?(product.id)  %> 
      <div class ="card-body">
        <div class="card" style="width: 18rem;">
          <% if product.picture.attached? %>
            <%= image_tag product.picture, class: "card-img-top"%> 
          <% else %>
            <%= image_tag "honeyjar.jpg", class: "card-img-top"%>
          <% end %>
          <div class="card-body">
            <h5 class="card-title"><%= product.name %></h5>
            <p class="card-text">Price: $<%= product.price %></p>
            <p class="card-text">Location: <%= product.location %></p>
            <p class="card-text">Size: <%= product.size %></p>
            <p class="card-text">Description: <%= product.description %></p>
            <%# <%= link_to "Write a Review", new_review_path, class:"nav-link btn-warning"%>
          </div>
        </div>
      </div>
      <% end %>
    <% end %>
  </div>
</div>