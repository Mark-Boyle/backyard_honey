<h1><%= image_tag "honey-bee.png"%>Backyard Honey</h1>
<div class="container">
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-md-4">
        <div class="card" style="width: 18rem;">
          <div class="card-body">
            <% if product.picture.attached? %>
              <%= image_tag product.picture, class: "card-img-top"%> 
            <% else %>
              <%= image_tag "honeyjar.jpg", class: "card-img-top"%>
            <% end %>
            <h5 class="card-title"><%= product.name %></h5>
            <p class="card-text">Price: <%= number_to_currency(product.price) %></p>
            <p class="card-text">Location: <%= product.location %></p>
            <p class="card-text">Size: <%= product.size %>ml</p>
            <%= link_to 'Show', product, class: "btn btn-warning"%>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
